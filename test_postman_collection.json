          "body": {
            "mode": "raw",
            "raw": "{\n  \"thread_id\": \"{{thread_id}}\",\n  \"sender_role\": \"user\",\n  \"text\": \"Approved\"\n}"
          }
        },
        "event": [
          {
            "listen": "test",
            "script": {
              "exec": [
