{
    "info": {
      "name": "BetterMeals – Local Webhook Flow",
      "_postman_id": "7f9d2d18-8f5a-4b8e-81c2-oss-groq-demo",
      "description": "Drives the WhatsApp → Supervisor → Workers flow via the FastAPI webhook.",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "A) Plan meals (expects plan-approval interrupt)",
        "request": {
          "method": "POST",
          "header": [
            { "key": "Content-Type", "value": "application/json" }
          ],
          "url": { "raw": "{{baseUrl}}/webhooks/whatsapp", "host": ["{{baseUrl}}"], "path": ["webhooks", "whatsapp"] },
          "body": {
            "mode": "raw",
            "raw": "{\n  \"thread_id\": \"{{thread_id}}\",\n  \"sender_role\": \"user\",\n  \"text\": \"Plan my meals for next week\",\n  \"mediaUrls\": []\n}"
          }
        },
        "event": [
          {
            "listen": "test",
            "script": {
              "exec": [
                "pm.test('Status is 200', () => pm.response.code === 200);",
                "pm.test('Has reply field', () => pm.response.json().hasOwnProperty('reply'));"
              ],
              "type": "text/javascript"
            }
          }
        ]
      },
      {
        "name": "B) Approve plan (resume thread)",
        "request": {
          "method": "POST",
          "header": [
            { "key": "Content-Type", "value": "application/json" }
